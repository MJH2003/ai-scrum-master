# Staging Environment Configuration
# This file is used in staging environments
# Secrets should be injected via environment variables, not committed!

# =============================================================================
# Application
# =============================================================================
NODE_ENV=staging
PORT=3000
LOG_LEVEL=info

# =============================================================================
# Database (use managed service like Neon, Supabase, RDS)
# =============================================================================
# DATABASE_URL is injected from secrets
# DATABASE_URL="postgresql://user:password@staging-db.example.com:5432/ai_scrum_master_staging?schema=public"

# =============================================================================
# Redis (use managed service like Upstash, ElastiCache)
# =============================================================================
# REDIS_URL is injected from secrets
# REDIS_URL="redis://default:password@staging-redis.example.com:6379"

# =============================================================================
# JWT Authentication
# =============================================================================
# JWT_SECRET and JWT_REFRESH_SECRET injected from secrets
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# =============================================================================
# Security
# =============================================================================
CORS_ORIGIN="https://staging.ai-scrum-master.com"
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# =============================================================================
# AI Providers
# =============================================================================
AI_PROVIDER="openai"
OPENAI_MODEL="gpt-4o"
ANTHROPIC_MODEL="claude-sonnet-4-20250514"
GOOGLE_AI_MODEL="gemini-2.0-flash"
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.7
# API keys injected from secrets

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_SWAGGER=true
ENABLE_METRICS=true
