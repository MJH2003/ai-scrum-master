# Development Environment Configuration
# Copy to .env for local development

# =============================================================================
# Application
# =============================================================================
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# =============================================================================
# Database (Docker Compose)
# =============================================================================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/ai_scrum_master?schema=public"

# =============================================================================
# Redis (Docker Compose)
# =============================================================================
REDIS_URL="redis://localhost:6379"

# =============================================================================
# JWT Authentication
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('base64'))"
# =============================================================================
JWT_SECRET="dev-jwt-secret-change-in-production-min-32-chars"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_SECRET="dev-refresh-secret-change-in-production-min-32-chars"
JWT_REFRESH_EXPIRES_IN="7d"

# =============================================================================
# Security
# =============================================================================
CORS_ORIGIN="http://localhost:5173,http://localhost:3001"
THROTTLE_TTL=60
THROTTLE_LIMIT=1000

# =============================================================================
# AI Providers (add your keys)
# =============================================================================
AI_PROVIDER="openai"

# OpenAI
OPENAI_API_KEY=""
OPENAI_MODEL="gpt-4o"

# Anthropic
ANTHROPIC_API_KEY=""
ANTHROPIC_MODEL="claude-sonnet-4-20250514"

# Google Gemini
GOOGLE_AI_API_KEY=""
GOOGLE_AI_MODEL="gemini-2.0-flash"

# AI Settings
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.7

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_SWAGGER=true
ENABLE_METRICS=true
